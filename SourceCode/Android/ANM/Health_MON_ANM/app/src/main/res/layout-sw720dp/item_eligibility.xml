                android:layout_gravity="center_vertical"
                android:layout_marginLeft="5dp"
                android:layout_weight="1"
                android:text="@string/txtLivingChildren" />

            <TextView
                android:id="@+id/valLivingChildren"
                style="@style/txt_preview_black_lable"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:text="" />


        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/colorlinegray" />

        <!-- Previous Dilivery Date -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/stdRowSize"
            android:layout_gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                style="@style/txt_preview_gray_lable"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="5dp"
                android:layout_weight="1"
                android:text="@string/txtPreviousDeliveryDate" />

            <TextView
                android:id="@+id/valPreviousDeliveryDate"
                style="@style/txt_preview_black_lable"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:text="" />


        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/colorlinegray" />

        <!-- Nature of Previous Delivery -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/stdRowSize"
            android:layout_gravity="center_vertical"
