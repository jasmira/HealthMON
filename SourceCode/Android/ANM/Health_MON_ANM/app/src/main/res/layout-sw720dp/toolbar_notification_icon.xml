<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:gravity="center"
    android:layout_gravity="center"
    style="@android:style/Widget.ActionButton"
    >
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_gravity="center">

        <ImageView
            android:id="@+id/hotlist_bell"
            android:src="@drawable/ic_landing_notifications"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:contentDescription="bell"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true" />

        <TextView
            android:id="@+id/hotlist_hot"
            android:layout_width="wrap_content"
            android:minWidth="17sp"
            android:textSize="12sp"
            android:textColor="#ffffff"
            android:layout_height="wrap_content"

            android:gravity="center"
            android:text="5"
            android:background="@drawable/toolbar_notification_rounded_square"
            android:layout_alignParentTop="true"
            android:layout_alignRight="@+id/hotlist_bell"
            android:layout_alignEnd="@+id/hotlist_bell" />


<!--                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/txtNotifications"
                    android:id="@+id/textView2"
                    android:layout_below="@+id/hotlist_bell"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true" />-->
    </RelativeLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Notifications"
        android:textSize="@dimen/sizetexttoolbar"
        android:textColor="@color/colordashboardtext"
        android:id="@+id/textView" />

</LinearLayout>