<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="wrap_content"
    android:layout_width="match_parent">

<LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linearlayoutheader"
        android:layout_alignParentStart="true"
        android:padding="@dimen/padding_top_line"
        android:layout_marginTop="@dimen/padding_top_line"
        android:id="@+id/linearLayout">
        <TextView
            android:id="@+id/textViewActivityName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight=".25"
            android:text="Physical Activity"
            style="@style/textView_row_Text"/>

        <TextView
            android:id="@+id/textViewTaskName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight=".25"
            android:text="Task"
            style="@style/textView_row_Text"/>

        <TextView
            android:id="@+id/textViewFrequencyName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight=".25"
            android:text="Frequency"
            style="@style/textView_row_Text"/>

        <TextView
            android:id="@+id/textViewRoleName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight=".25"
            android:text="Role"
            style="@style/textView_row_Text"/>
</LinearLayout>
</android.support.v7.widget.CardView>