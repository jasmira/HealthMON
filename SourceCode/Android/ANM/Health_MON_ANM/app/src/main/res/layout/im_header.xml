<?xml version="1.0" encoding="utf-8"?>

<!-- Patient Detailed Card-->
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/edittext_border_green"
        android:orientation="horizontal">

        <!-- Fourth Column-->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imgLeft"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_arrow_left"
                    android:layout_centerVertical="true"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="5dp" />
                <ImageView
                    android:id="@+id/imgImmunization"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_immunization"
                    android:layout_alignBottom="@+id/textViewStatus"
                    android:layout_toEndOf="@+id/imgLeft" />

                <TextView
                    android:id="@+id/txtImmunization"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:text="Immunization"
                    android:textColor="@color/colorBlue"
                    android:textSize="22sp"
                    android:textStyle="bold"
                    android:layout_alignBottom="@+id/imgLeft"
                    android:layout_toEndOf="@+id/imgImmunization"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/txtStatus"
                    android:id="@+id/textViewStatus"
                    android:layout_below="@+id/txtImmunization"
                    android:layout_toEndOf="@+id/imgImmunization"
                    android:visibility="gone"/>
            </RelativeLayout>


        </LinearLayout>


        <com.mikhaellopez.circularimageview.CircularImageView
            android:id="@+id/imgPatient"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_margin="10dp"
            android:src="@mipmap/ic_launcher" />
        <!-- First Column-->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.2"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="5dp">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="horizontal">

                <TextView
                    style="@style/txt_blue_lable_normal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dp"
                    android:text="Akansha Shrivastava," />

                <TextView
                    android:id="@+id/txtPID"
                    style="@style/txt_blue_lable_normal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="32/F" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textColor="@color/colorLightRed"
                    android:text="" />

            </LinearLayout>

        </LinearLayout>


        <TextView
            android:layout_width="2dp"
            android:layout_height="match_parent"
            android:layout_margin="20dp"
            android:background="@color/colorlinegray" />
        <!-- Second Column-->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="5dp">

            <TextView
                android:id="@+id/txtProgramName"

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:singleLine="true"
                android:textColor="@color/colorBlue"
                android:text="@string/txtANCare" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textColor="@color/colorBlack"
                    android:text="20 weeks" />


            </LinearLayout>


        </LinearLayout>



    </LinearLayout>
</android.support.v7.widget.CardView>
