<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorlinegray"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/txtSrNo"
        android:layout_width="0dp"
        android:layout_height="@dimen/stdRowHeader"
        android:layout_margin="1dp"
        android:layout_weight="1"
        android:background="@color/colorWhite"
        android:gravity="center"
        android:padding="2dp"
        android:text="@string/txtSno"
        android:textColor="@color/colorBlack"
        android:textSize="@dimen/text17sp" />

    <TextView
        android:id="@+id/txtDate"
        android:layout_width="0dp"
        android:layout_height="@dimen/stdRowHeader"
        android:layout_margin="1dp"
        android:layout_weight="2"
        android:background="@color/colorWhite"
        android:gravity="center"
        android:padding="2dp"
        android:text="@string/txtDate"
        android:textColor="@color/colorBlack"
        android:textSize="@dimen/text17sp" />

    <TextView
        android:id="@+id/txtPatientName"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_margin="1dp"
        android:layout_weight="3"
        android:background="@color/colorWhite"
        android:gravity="center"
        android:padding="2dp"
        android:text="@string/txtBeneficiaryPatient"
        android:textColor="@color/colorBlack"
        android:textSize="@dimen/text17sp" />

    <TextView
        android:id="@+id/txtPrgWeeks"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_margin="1dp"
        android:layout_weight="2"
        android:background="@color/colorWhite"
        android:gravity="center"
        android:padding="2dp"
        android:text="@string/txtWeeksDuringRegistration"
        android:textColor="@color/colorBlack"
        android:textSize="@dimen/text17sp" />

    <TextView
        android:id="@+id/txtVillage"
        android:layout_width="0dp"
        android:layout_height="@dimen/stdRowHeader"
        android:layout_margin="1dp"
        android:layout_weight="2"
        android:background="@color/colorWhite"
        android:gravity="center"
        android:padding="2dp"
        android:text="@string/txtVillage"
        android:textColor="@color/colorBlack"
        android:textSize="@dimen/text17sp" />

    <TextView
        android:id="@+id/txtWard"
        android:layout_width="0dp"
        android:layout_height="@dimen/stdRowHeader"
        android:layout_margin="1dp"
        android:layout_weight="2"
        android:background="@color/colorWhite"
        android:gravity="center"
        android:padding="2dp"
        android:text="@string/txtWard"
        android:textColor="@color/colorBlack"
        android:textSize="@dimen/text17sp" />

    <TextView
        android:id="@+id/txtAge"
        android:layout_width="0dp"
        android:layout_height="@dimen/stdRowHeader"
        android:layout_margin="1dp"
        android:layout_weight="1"
        android:background="@color/colorWhite"
        android:gravity="center"
        android:padding="2dp"
        android:text="@string/txtAge"
        android:textColor="@color/colorBlack"
        android:textSize="@dimen/text17sp" />

    <TextView
        android:id="@+id/txtEDD"
        android:layout_width="0dp"
        android:layout_height="@dimen/stdRowHeader"
        android:layout_margin="1dp"
        android:layout_weight="2"
        android:background="@color/colorWhite"
        android:gravity="center"
        android:padding="2dp"
        android:text="@string/txtEDD"
        android:textColor="@color/colorBlack"
        android:textSize="@dimen/text17sp" />

    <TextView
        android:id="@+id/txtDeliveryNo"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_margin="1dp"
        android:layout_weight="2"
        android:background="@color/colorWhite"
        android:gravity="center"
        android:padding="2dp"
        android:text="@string/txtDeliveryNumber"
        android:textColor="@color/colorBlack"
        android:textSize="@dimen/text17sp" />
</LinearLayout>