<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorlinegray"
    android:orientation="horizontal">

    <TextView
        android:layout_width="0dp"
        android:layout_height="@dimen/stdRowHeader"
        android:layout_margin="1dp"
        android:layout_weight="3"
        android:background="@color/colorBlue"
        android:gravity="center"
        android:padding="2dp"
        android:text="@string/txtImmunizationName"
        android:textColor="@color/colorWhite"
        android:textSize="@dimen/text17sp" />

    <TextView
        android:layout_width="0dp"
        android:layout_height="@dimen/stdRowHeader"
        android:layout_margin="1dp"
        android:layout_weight="2"
        android:background="@color/colorBlue"
        android:gravity="center"
        android:padding="2dp"
        android:text="@string/txtImmunizationDueDate"
        android:textColor="@color/colorWhite"
        android:textSize="@dimen/text17sp" />

    <TextView
        android:layout_width="0dp"
        android:layout_height="@dimen/stdRowHeader"
        android:layout_margin="1dp"
        android:layout_weight="2"
        android:background="@color/colorBlue"
        android:gravity="center"
        android:padding="2dp"
        android:text="@string/txtImmunizationDoneDate"
        android:textColor="@color/colorWhite"
        android:textSize="@dimen/text17sp" />

    <TextView
        android:layout_width="0dp"
        android:layout_height="@dimen/stdRowHeader"
        android:layout_margin="1dp"
        android:layout_weight="3"
        android:background="@color/colorBlue"
        android:gravity="center"
        android:padding="2dp"
        android:text="@string/txtImmunizationGivenBy"
        android:textColor="@color/colorWhite"
        android:textSize="@dimen/text17sp" />

    <TextView
        android:layout_width="0dp"
        android:layout_height="@dimen/stdRowHeader"
        android:layout_margin="1dp"
        android:layout_weight="3"
        android:background="@color/colorBlue"
        android:gravity="center"
        android:padding="2dp"
        android:text="@string/txtImmunizationRole"
        android:textColor="@color/colorWhite"
        android:textSize="@dimen/text17sp" />
    <TextView
        android:layout_width="0dp"
        android:layout_height="@dimen/stdRowHeader"
        android:layout_margin="1dp"
        android:layout_weight="3"
        android:background="@color/colorBlue"
        android:gravity="center"
        android:padding="2dp"
        android:text="@string/txtImmunizationGivenAt"
        android:textColor="@color/colorWhite"
        android:textSize="@dimen/text17sp" />
</LinearLayout>