<resources>

    <style name="AppTheme" parent="AppTheme.Base" />

    <style name="AppTheme.Base" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <!--        <item name="android:windowNoTitle">true</item>
                <item name="windowActionBar">false</item>-->
    </style>

    <style name="Font17BlackNormal">
        <item name="android:textSize">@dimen/text17sp</item>
        <item name="android:textColor">@android:color/black</item>/>
    </style>

    <style name="Font15GrayNormal">
        <item name="android:textSize">@dimen/text15sp</item>
        <item name="android:textColor">@color/colortextgray</item>/>
    </style>

    <style name="Font15BlackNormal">
        <item name="android:textSize">@dimen/text15sp</item>
        <item name="android:textColor">@android:color/black</item>/>
    </style>

    <style name="Font17RedNormal">
        <item name="android:textSize">@dimen/text17sp</item>
        <item name="android:textColor">@color/colorLightRed</item>/>
    </style>

    <style name="Font17BlueNormal">
        <item name="android:textSize">@dimen/text17sp</item>
        <item name="android:textColor">@color/colorBlue</item>/>
    </style>


    <style name="Font15BlueNormal">
        <item name="android:textSize">@dimen/text15sp</item>
        <item name="android:textColor">@color/colorBlue</item>/>
    </style>

    <style name="greenRoundButton">
        <item name="android:textSize">@dimen/text20sp</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:background">@drawable/button_selector</item>
        <item name="android:paddingRight">20dp</item>
        <item name="android:paddingLeft">20dp</item>
        <item name="android:capitalize">sentences</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="grayRoundButton">
        <item name="android:textSize">@dimen/text20sp</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:background">@drawable/button_rounded_gray</item>
        <item name="android:paddingRight">20dp</item>
        <item name="android:paddingLeft">20dp</item>
        <item name="android:capitalize">sentences</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="roundButtonSelector">
        <item name="android:textSize">@dimen/text20sp</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:background">@drawable/button_selector</item>
        <item name="android:paddingRight">20dp</item>
        <item name="android:paddingLeft">20dp</item>
        <item name="android:capitalize">sentences</item>
        <item name="android:textAllCaps">false</item>
    </style>


    <style name="notificationgreenRoundButton">
        <item name="android:textSize">@dimen/text17sp</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:background">@drawable/notification_button_rounded_green</item>
        <item name="android:capitalize">sentences</item>
        <item name="android:minHeight">0dp</item>
        <item name="android:padding">10dp</item>
        <item name="android:minWidth">0dp</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <dimen name="text15sp">15sp</dimen>

    <style name="edt_patient_registration">
        <item name="android:height">@dimen/stdRowSize</item>
        <item name="android:width">@dimen/stdWidthPatientRegEdttext</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textSize">@dimen/text17sp</item>
        <item name="android:textColor">@color/colorBlack</item>
    </style>

    <style name="spinner_style" parent="Widget.AppCompat.Spinner.Underlined">
        <!-- <item name="android:background">@drawable/dropdown_arrow_draw</item>
         <item name="android:padding">5dp</item>-->

    </style>

    <style name="txt_20sp_lable_black">
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:textSize">@dimen/text20sp</item>
    </style>

    <style name="txt_20sp_lable_gray">
        <item name="android:textColor">@color/colortextgray</item>
        <item name="android:textSize">@dimen/text20sp</item>
    </style>

    <style name="txt_preview_gray_lable">
        <item name="android:textColor">@color/colortextgray</item>
        <item name="android:textSize">@dimen/text17sp</item>
    </style>

    <style name="txt_preview_black_lable">
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:textSize">@dimen/text17sp</item>
    </style>

    <style name="txt_blue_lable_normal">
        <item name="android:textColor">@color/colorBlue</item>
        <item name="android:textSize">@dimen/text17sp</item>
    </style>

    <style name="TaskRowDate">
        <item name="android:textColor">@color/task_row_date</item>
        <item name="android:textSize">@dimen/task_row_date</item>
    </style>


    <!--Devices-->
    <style name="TextTitle">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@android:color/holo_blue_light</item>
    </style>

    <style name="TextReportTitle">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">#fff</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextReportNumber">
        <item name="android:textSize">22sp</item>
        <item name="android:textColor">@color/bp_normal</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="ButtonConect">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#fff</item>
        <item name="android:background">#0000</item>
    </style>

    <style name="deviceTile">
        <item name="android:background">@drawable/tile_bg</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_margin">10dp</item>
    </style>

</resources>
