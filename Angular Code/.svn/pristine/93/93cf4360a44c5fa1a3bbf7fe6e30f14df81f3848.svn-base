<div class="row">
    <div class="col-sm-12 top-header">
        <div class="row">
			<div class="col-md-9" ></div>
			<div class="col-md-3 align-top-text">
			  <div class="row">
				  <div class="col-sm-9 top-pad-both" id="top-lang-dropdn">
				  <div class="dropdown">
				  <button class="btn btn-default dropdown-toggle" type="button" id="dropdownMenu1" data-
                          toggle="dropdown" aria-haspopup="true" aria-expanded="true">
					Language
					<span class="caret"></span>
				  </button>
				  <ul class="dropdown-menu" aria-labelledby="dropdownMenu1">
					<li>Action</li>
					<li>Action</li>
					<li>Action</li>
				  </ul>
				  </div>
				  </div>
				  <div class=" col-sm-1 top-pad-both"><span class="header-link">|</span></div>
				  <div class="col-sm-2"> <a class="header-link">A<span class="top-font-text">A</span><span 
                                class="top-font-textsm">A</span></a> </div>
			  </div>
			</div>
        </div>
        <div class="row" id="logo">
			<div class="col-md-2"><img src="/static/images/Logo.png" width="169" height="64" alt="Logo"></div>
			<div class="col-md-8"></div>
			<div class="col-md-2">
				<div class="row align-top-text m-tp-profile" id="profile">
				  <div class=" col-xs-7 col-sm-8 col-md-8 gen-margin-header top-pad-both top-pad-both-1024" 
                       id="notification">
					<button class="btn btn-primary dropdown-toggle m-tp-profile" type="button" ng-disabled="headerCtrl.notificationCount==0"
                            data-toggle="dropdown"><img src="static/images/notification.png" width="24" 
                                                        height="32"><span 
                                class="badge" >{{headerCtrl.notificationCount}}</span>
					</button>
	  
					<ul class="dropdown-menu">
					  <li><div class="caret-position">
						  <div class="blue-caret"><img src="static/images/blue_caret.png" width="17" 
                                        height="10"></div></div></li>
					  <li id="panel-dropdn"> <div class="panel-heading">
						<h3 class="panel-title">Notifications</h3>
					  </div></li>
					  <li  ng-repeat='notification in headerCtrl.TaskAlertList' ng-if="notification.User_Task_Type == 'notification'" style="padding-left:2%"> 
						<div class=" alert-text">{{notification.User_Task_Description}}</div>
						<div class="small-text-gray"></div>
						<div class="small-text-gray" ng-if="notification.Modified_User_Task_Date.daysFromTaskCreation != '0'">  
														  {{notification.Modified_User_Task_Date.daysFromTaskCreation}}  days
														  {{notification.Modified_User_Task_Date.hoursFromTaskCreation}} hours ago</div>
						<div class="small-text-gray" ng-if="notification.Modified_User_Task_Date.daysFromTaskCreation == '0'">  
														  {{notification.Modified_User_Task_Date.hoursFromTaskCreation}} hours ago</div>
						<div class="border-bottom"></div>
					  </li> 
						 
						<!--<li><div class="panel-footer">See All</div></li>-->
					</ul>
			      </div>  
				  <div class="col-xs-4 col-sm-4 m-tp-profile" id="userprofile">
				 <!-- <img src="images/profile_pic.png" width="53" height="53" alt="Image"> -->
					<button class="btn btn-primary dropdown-toggle" type="button" data-toggle="dropdown" title='User profile'>
					<img src="/static/images/profile_img.png" width="58" height="58" alt="Image" 
                         class="user-pic user-online"></button>
					<ul class="dropdown-menu"  ng-repeat='info in headerCtrl.profileInfo'>
					  <li><div class="caret-position">
						  <div class="blue-caret"><img src="/static/images/blue_caret.png" width="17" 
                                                       height="10"></div></div></li>
					  <li id="panel-dropdn"> 
					  <div class="panel-heading">
					   <div class="row">
					   <div class="col-md-3">
					   <div><img src="/static/images/img_big.png" width="105" height="104"></div>
					   <div class="user-online-frame"><img src="/static/images/frame_green_user.png" 
                                                           width="111" height="110"></div>
					   <div class="user-edit-strip"> </div>
					   <div class="user-edit-text"><a ui-sref="{{$state.current.name}}">Change</a></div>
					   </div>
					   <div class="col-md-7 user-name">Dr. {{info.User_Name}}<br>
					<span class="user-reg-num">Registration ID: {{info.User_reg_id}}</span><br><br>

					<span class="user-designation" ng-if='info.User_role'>Medical Officer<br>

					 {{info.User_qualification}}</span></div>
					   </div>
					  </div></li>
						<li>
							<div class="small-text-gray gen-margin-top gen-pad-left">Address: 
                                {{info.User_Address1}} {{info.User_Address2}}<br>

							Email ID: <a href="mailto:{{info.User_email_id}}">{{info.User_email_id}}</a><br>

							Contact No.: {{info.User_contact_number}}<br>
							
							Place of Work <br>

							Taluka: {{info.User_Place_ofWork}}<br>

							PHC: {{info.PHC}}<br>

							</div>
						   <div class="border-bottom"></div>
						   <div class="col-md-8"><a ui-sref="{{$state.current.name}}" class="change-
                               password">Change Password</a></div>
						   <div class="col-md-4 gen-bot-pad"> <a ui-sref='logout'> 
								<button type="button" class="btn btn-default gen-left-margin" 
                                        >Logout</button></a></div>
						</li>
						<!--<li><div class="panel-footer">See All</div></li> -->
					</ul>
				  </div>
				</div>
			</div>
        </div>
    </div>
</div>